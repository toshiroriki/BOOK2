<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <table class="table">
        <tbody>
          <tr>
            <th><%= attachment_image_tag @user, :profile_image,fallback:'no_image.jpg' %></th>
            <th>name</th>
            <th><%=@user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%=@user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row"><%= link_to "Edit", edit_user_path(@user) %></div>
    <div class="col-md-8 offset-md-1"></div>



<h2 class="mt-3">New book</h2>

<%= form_with model:@book, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>



  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
</div>
<% end %>
<div class="col-md-8 offset-md-1">
<h2>Books</h2>



<table class="table table-hover table-inverse">
<thead>
  <tr>
    <th>Title</th>
    <th>opinion</th>
    <th colspan=3></th>
  </tr>
 </thead>
 <tbody>
   <% @user.books.each do |book| %>
  <tr>
    <td><%= attachment_image_tag @user, :profile_image,fallback:'no_image.jpg' %></td>
    <td><%= link_to book.title, book_path(book.id) %></td>
    <td><%= book.body %></td>
 </tr>
 <% end %>
 </tbody>
 </table>
</div>
</div>
</div>