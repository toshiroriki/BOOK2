<% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= @book.errors.count %>errors prohibited this obj from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
<% end %>


<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <table class="table">
        <tbody>
          <tr>
            <th><%= attachment_image_tag current_user, :profile_image ,fallback:'no_image.jpg' %></th>
            <th>name</th>
            <th><%=current_user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%=current_user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div><%= link_to "Edit", edit_user_path(current_user) %></div>
    </div>
    <div class="col-md-8 offset-md-1"></div>
  </div>
</div>



<h1>New book</h1>
<%= form_with model:@book, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>



  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>

<% end %>

<h1>Books</h1>



<table>
<thead>
  <tr>
    <th>Title</th>
    <th>opinion</th>
    <th colspan=3></th>
  </tr>
 </thead>
 <tbody>
   <% @books.each do |book| %>
  <tr>
    <td><%= attachment_image_tag book.user, :profile_image ,fallback:'no_image.jpg' %></td>
    <td><%= link_to book.title, book_path(book.id) %></td>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
 </tr>
 <% end %>
 </tbody>
 </table>
